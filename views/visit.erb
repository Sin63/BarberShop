<h3 id='cV' >Записаться</h3>

<p>Здесь вы можете записаться в салон.</p>

<form action="/visit" method="POST" role="form">
  <div class="form-group">
    <label for=>Ваше имя</label>
    <input  name="user_name" type="text" class="form-control" placeholder="Введите ваше имя" value="<%= @username %>">
  </div>
  
 

    <div class="form-group">
    <label for=>Ваш телефон</label>
    <input  name="phone_number" type="text" class="form-control" placeholder="Введите ваш номер" value="<%= @phone %>">
  </div>
  
 

   <div class="form-group">
    <label for=>Когда вас ждать</label>
    <input id="datetimepicker" name="date_time" type="text" class="form-control" placeholder="Введите дату и время" value="<%= @datetime %>" >
  </div>

     
   <div class="form-group">
    <label >Выберите мастера</label> 
   <select name="hairdresser" class="custom-select" >
      <option value=>Мастера</option>
      
     
      <% @barbers.each do |item| %>
      <option <%= @barber == item['name'] ? 'selected' : '' %>><%= item['name'] %>
      <% end %>

       </select>
      </div>
      
     <div class="form-group">
    <label>Цвет краски</label>
   <select id="color" name="color"  value="<%= @color %>"  >
      <option value=>Цвета</option>
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
       </select><br>
  
  <button type="submit" class="btn btn-primary">Записаться</button> 

</form>

<script type="text/javascript"> 

 $(function(){
 //тут можно писать любой javascript сод, который исполнится после загрузки страницы
    $('#color').simplecolorpicker();
    $('#cV').css('background-color', 'grey');
    $('#datetimepicker').datetimepicker();
 });

</script>